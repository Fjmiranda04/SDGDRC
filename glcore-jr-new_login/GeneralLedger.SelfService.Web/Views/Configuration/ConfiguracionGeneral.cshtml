@{
    ViewData["Title"] = "Configuración General";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="card border-0 px-0 py-0 my-0">
            <div class="col-md-12 px-2 pt-2">
                <ul class="breadcrumb">
                    <li class="breadcrumb-item"><a href="#">Configuración</a></li>
                    <li class="breadcrumb-item active">Configuración General</li>
                </ul>
            </div>

            <div class="card-body">
                <!--GENERALES-->

                <div class="row">
                    <div class="col-md-12">
                        <h1 class="page-header m-0 p-0">
                            Datos Generales 
                        </h1>
                    </div>
                </div>

                <hr />

                <div class="row">
                    <div class="col-md-9">
                        <div class="row my-3">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="" class="form-label">Nombre de Empresa</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="fa fa-industry"></i> </span>
                                        <input type="text" id="nombreempresa" name="nombreempresa" class="form-control" value="" />
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="" class="form-label">NIT</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="fa fa-hashtag"></i> </span>
                                        <input type="text" id="nitempresa" name="nitempresa" class="form-control" value="" readonly/>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row my-3">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="" class="form-label">Dirección de Empresa</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="fa fa-map-marker-alt"></i> </span>
                                        <input type="text" id="direccionempresa" name="direccionempresa" class="form-control" value="" />
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="" class="form-label">Tel/Cel Empresa</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="fa fa-phone"></i> </span>
                                        <input type="text" id="telefonoempresa" name="telefonoempresa" class="form-control" value="" />
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row my-3">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label for="" class="form-label">Sitio Web Empresa</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="fa fa-laptop"></i> </span>
                                        <input type="text" id="webempresa" name="webempresa" class="form-control" value="" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card" style="width:390px;height:320px;">
                            <img id="imglogo" src="" class="img-fluid" alt="Logo de Empresa" style="max-width:390px;max-height:300px" />
                            <div class="card-body">
                               
                                                                 
                            </div>
                        </div>
                        <button id="btnuploadpicture" type="button" class="btn btn-primary w-100">Subir Imagen</button>
                        <input type="file" id="filelogo" style="display:none;" accept="image/*">
                    </div>
                </div>

                <!--CORREO-->

                <div class="row my-2">
                    <div class="col-md-12">
                        <h1 class="page-header m-0 p-0">
                            Correo
                        </h1>
                    </div>
                </div>

                <hr />

                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label class="form-label">Emails a notificar</label>
                            <button class="btn btn-primary btn-sm" data-bs-toggle="tooltip" data-bs-placement="top" title="Escriba los correos separados por punto y coma (;)"><i class="fas fa-info-circle"></i></button>
                            <textarea id="emails" name="emails" class="form-control mt-2" cols="5" rows="5"></textarea>
                            
                        </div>
                    </div>
                </div>

                <!--ALMACENAMIENTO-->

                <div class="row my-2">
                    <div class="col-md-12">
                        <h1 class="page-header m-0 p-0">
                            Almacenamiento y Archivos
                        </h1>
                    </div>
                </div>

                <hr />

                <div class="row">
                    <div class="row my-2">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label for="" class="form-label">URL Bucket Amazon</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fab fa-amazon"></i> </span>
                                    <input type="text" id="urlbucket" name="urlbucket" class="form-control" value="" />
                                </div>
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="form-group">
                                <label for="" class="form-label">ID Bucket Amazon</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fab fa-amazon"></i> </span>
                                    <input type="text" id="idbucket" name="idbucket" class="form-control" value="" />
                                </div>
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="form-group">
                                <label for="" class="form-label">Nombre Bucket</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fab fa-amazon"></i> </span>
                                    <input type="text" id="nombrebucket" name="nombrebucket" class="form-control" value="" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row my-2">
                    <div class="col-md-12">
                        <button id="btnsavecfg" type="button" class="btn btn-success">Guardar Configuración</button>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

@section Scripts
{
    <script src="~/scripts/Configuracion/configuraciongeneral.js" type="text/javascript"></script>
}