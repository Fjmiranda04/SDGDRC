@model GeneralLedger.SelfServiceCore.Data.DTOs.AspNetUserShowDTO
@{
    ViewData["Title"] = "Editar usuario";
}
<div class="row">
    <div class="col-md-4">
        <div class="card border-0">
            <div class="col-md-12 px-2 pt-2">
                <ul class="breadcrumb">
                    <li class="breadcrumb-item"><a href="#">Configuraciones</a></li>
                    <li class="breadcrumb-item active">Usuarios</li>
                    <li class="breadcrumb-item active">Editar Usuario</li>
                </ul>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-12 col-md-12 pb-3">
                        <div class="row">
                            <div class="col-12 d-flex justify-content-center">
                                <img src="~/icon/user.png" alt="Imagen de usuario">
                            </div>
                            <div class="col-12 text-center pt-1">
                                <h5 class="fw-bold">@Model.UserName</h5>
                            </div>
                            <div class="col-12 text-center">
                                <span class="badge bg-primary bg-opacity-20 text-primary fw-bold" style="font-size:0.8rem">@Model.Rol</span>
                            </div>
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="row py-1 px-2">
                            <div class="col-6">
                                <h5 class="text-dark">Detalles</h5>
                            </div>
                            <div class="col-6 d-flex justify-content-end">
                                <button id="btn-edit-user" type="button" class="btn btn-primary btn-sm"><i class="fas fa-edit"></i>Editar</button>
                            </div>
                        </div>
                    </div>
                    <hr>
                    <div class="col-md-12">
                        <div class="row">
                            <div class="col-12 py-2">
                                <h6 class="fw-bold text-dark py-0 my-0">Identificación</h6>
                                <h6 class="text-black-50 py-0 my-0">@Model.NroId</h6>
                            </div>
                            <div class="col-12 py-2">
                                <h6 class="fw-bold text-dark py-0 my-0">Email</h6>
                                <h6 class="text-black-50 py-0 my-0">@Model.Email</h6>
                            </div>
                            <div class="col-12 py-2">
                                <h6 class="fw-bold text-dark py-0 my-0">Dirección</h6>
                                <h6 class="text-black-50 py-0 my-0">@Model.Direccion</h6>
                            </div>
                            <div class="col-12 py-2">
                                <h6 class="fw-bold text-dark py-0 my-0">Celular</h6>
                                <h6 class="text-black-50 py-0 my-0">@Model.Celular</h6>
                            </div>
                            <div class="col-12 py-2">
                                <h6 class="fw-bold text-dark py-0 my-0">Telefono</h6>
                                <h6 class="text-black-50 py-0 my-0">@Model.Telefono</h6>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-8">
        <div class="card border-0">
            <div class="card-body px-2 py-1">
                <ul class="nav nav-tabs nav-tabs-v2">
                    <li class="nav-item me-3"><a href="#menus" class="nav-link active" data-bs-toggle="tab">MENUS</a></li>
                    <li class="nav-item me-3"><a href="#permisos" class="nav-link" data-bs-toggle="tab">PERMISOS</a></li>
                    <li class="nav-item me-3"><a href="#roles" class="nav-link" data-bs-toggle="tab">ROLES</a></li>
                    <li class="nav-item me-3"><a href="#security" class="nav-link" data-bs-toggle="tab">SEGURIDAD</a></li>
                </ul>
            </div>
        </div>

        <div class="tab-content pt-3">
            <div class="tab-pane fade active show" id="menus">
                <div class="card border-0">
                    <div class="card-body">
                        <div class="row">
                            <div id="list-menus">

                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="tab-pane fade" id="permisos">
                <div class="card border-0">
                    <div class="card-body">
                        <table id="table-permisos" class="table table-borderless" width="100%">
                            <thead>
                                <tr>
                                    <th width="90%">Permiso</th>
                                    <th width="10%">Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <div class="tab-pane fade" id="roles">
                <div class="card border-0">
                    <div class="card-body">
                        <table id="table-roles" class="table table-borderless" width="100%">
                            <thead>
                                <tr>
                                    <th width="90%">Rol</th>
                                    <th width="10%">Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <div class="tab-pane fade" id="security">
                <div class="card border-0">
                    <div class="card-body">
                        <div class="row d-flex justify-content-center">
                            <div class="col-md-8">
                                <div class="row">
                                    <div class="col-md-12 py-2">
                                        <div class="form-group">
                                            <label class="form-label">Email</label>
                                            <div class="input-group">
                                                <span class="input-group-text">
                                                    <i class="fas fa-envelope"></i>
                                                </span>
                                                <input class="form-control" value="@Model.Email" readonly/>
                                                <button type="button" id="btn-edit-email" class="input-group-text btn-secondary"><i class="fas fa-edit"></i></button>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="col-md-12 py-2">
                                        <div class="form-group">
                                            <label class="form-label">Contraseña</label>
                                            <div class="input-group">
                                                <span class="input-group-text">
                                                    <i class="fas fa-key"></i>
                                                </span>
                                                <input type="password" class="form-control" value="@Model.Password" readonly/>
                                                <button type="button" id="btn-edit-password" class="input-group-text btn-secondary"><i class="fas fa-edit"></i></button>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="col-md-12 py-2">
                                        <div class="form-group">
                                            <label class="form-label">Rol</label>
                                            <div class="input-group">
                                                <span class="input-group-text">
                                                    <i class="fas fa-id-badge"></i>
                                                </span>
                                                <input type="text" class="form-control" value="@Model.Rol" readonly/>
                                                <button type="button" id="btn-edit-rol" class="input-group-text btn-secondary"><i class="fas fa-edit"></i></button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

