@section Scripts
{
    <script type="text/javascript">
        var modal = "";
        $(document).ready(()=>{
            LoadMenusUser("@Model.NroId");
            LoadRoles();
            LoadPermisosUsuarios();
            LoadRolesUsuarios();

            $("#btn-edit-email").on('click',()=>{OpenModal("modal-edit-email");});
            $("#btn-edit-password").on('click',()=>{OpenModal("modal-edit-password");});
            $("#btn-edit-rol").on('click',()=>{OpenModal("modal-edit-rol");});
            $("#btn-edit-user").on('click',()=>{OpenModal("modal-user");});

            $("#btn-save-user").on('click',()=>{EditUser()});
            $("#btn-save-email").on('click',()=>{EditEmail()});
            $("#btn-save-password").on('click',()=>{ChangePassword()});
            $("#btn-save-rol").on('click',()=>{ChangeRol()});
        });


        function LoadMenusUser(nroidUser){ 
            $.ajax({
                url: "@Url.Action("GetMenusByUsuario","Configuration")",
                type: "GET",
                data: {nroid: nroidUser},                
                contentType: "application/json",
                success: function (response) {
                    let listmenu = $("#list-menus");
                    listmenu.empty();
                    let html = '';

                    html += `<div class="accordion" id="accordionFlushExample">`;
                    for(var m in response.data){     
                        if(response.data[m].depMnu == "NO"){
                            html += `<div class="accordion-item">
                                        <h2 class="accordion-header" id="flush-heading${response.data[m].codMnu}">
                                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapse${response.data[m].codMnu}" aria-expanded="false" aria-controls="flush-collapseOne">
                                                <input class="form-check-input me-1" onchange="OnOffMenu('${response.data[m].codMnu}','${nroidUser}',${response.data[m].activo})" type="checkbox" ${(response.data[m].activo)? 'checked':''} value="${response.data[m].codMnu}" data-u="${nroidUser}"> 
                                                <i class="${response.data[m].icoMnu}"> </i> 
                                                ${"  "+response.data[m].nomMnu}
                                            </button>
                                        </h2>
                                        <div id="flush-collapse${response.data[m].codMnu}" class="accordion-collapse collapse show" aria-labelledby="flush-heading${response.data[m].codMnu}" data-bs-parent="#accordionFlushExample">
                                            <div class="accordion-body">
                                                <div class="list-group m-1">`;
                            for(var s in response.data){
                                if(response.data[s].depMnu == response.data[m].codMnu){
                                    html += `<label class="list-group-item">
                                                <input class="form-check-input me-1" onchange="OnOffMenu('${response.data[s].codMnu}','${nroidUser}',${response.data[s].activo})" type="checkbox" ${(response.data[s].activo)? 'checked':''}>
                                                <i class="${response.data[s].icoMnu}"></i>
                                                ${response.data[s].nomMnu}
                                            </label>`;
                                }
                            }
                            html += `           </div>
                                            </div>   
                                        </div>
                                    </div>`;
                        }
 
                    }
                    html += `</div>`;

                    listmenu.append(html);
                },
            })
        }

        function OnOffMenu(codMnu, nroIdUser,value){
            $.ajax({
                url: '@Url.Action("AddDeleteMenuUser","Configuration")',
                type: "GET",
                data: {codMnu: codMnu,nroIdUser: nroIdUser,value:value}, 
                datatype: "json",
                contentType: "application/json",
                success: function (response) {
                    if (response.result) {
                        ToastAlert.fire({icon: 'success',title: response.message});
                        LoadMenusUser(nroIdUser);
                    } else {
                        ToastAlert.fire({icon: 'error',title: response.message});
                    }
                },
            });
        }

        function LoadRoles(){
            $.ajax({
                url: '@Url.Action("GetRoles","Configuration")',
                type: "GET", 
                datatype: "json",
                contentType: "application/json",
                success: function (response) {
                    $("#newrol").empty();
                    let option = "";
            
                    option += `<option value="" ${("@Model.IdRol" == "")? 'selected':''}>SIN ASIGNAR</option>`;

                    for(var i in response.data){
                        if("@Model.IdRol" == ""){
                            option += `<option value="${response.data[i].id}">${response.data[i].rol}</option>`;
                        }else{
                            option += `<option value="${response.data[i].id}" ${(response.data[i].id == "@Model.IdRol")? 'selected': ''} >${response.data[i].rol}</option>`;
                        }
                    }
                    $("#newrol").append(option);
                },
            });
        }

        function OpenModal(choosedModal){
            modal = new bootstrap.Modal(document.getElementById(choosedModal), {});
            if(choosedModal == "modal-user"){
                $.ajax({
                    url: "@Url.Action("GetUser","Configuration")",
                    type: "GET",
                    data: {nroId : "@Model.NroId"},
                    contentType: "application/json",
                    success: function (response) {
                        if (response.result) {
                            $("#NroId").val("@Model.NroId");
                            $("#UserName").val(response.data.name);
                            $("#Email").val(response.data.email);
                            $("#Telefono").val(response.data.telefono);
                            $("#Celular").val(response.data.celular);
                            $("#Direccion").val(response.data.direccion);
                            $("#UserGL option[value="+ response.data.userGL +"]").attr("selected",true);
                        } else {
                            ToastAlert.fire({icon: 'error',title: response.message}); 
                        }
                    },
                });  
            }
            modal.show();
        }

        function EditUser(){
            $.ajax({
                url: "@Url.Action("EditUser","Configuration")",
                type: "POST",
                data: $("#form-edit-user").serialize(),
                beforeSend: function () {
                    $('#btn-save-user').prop('disabled', true);
                },
                success: function (response) {
                    if (response.result) {
                        modal.hide();
                        ToastAlert.fire({icon: 'success',title: response.message}); 
                    } else {
                        ToastAlert.fire({icon: 'error',title: response.message}); 
                    }
                },
                complete: function () {
                    $('#btn-save-user').prop('disabled', false);
                }
            });  
        }

        function EditEmail(){
            $.ajax({
                url: "@Url.Action("EditEmailUser","Configuration")",
                type: "POST",
                data: {newEmail: $("#newemail").val(),nroIdUser: "@Model.NroId"},
                beforeSend: function () {
                    $('#btn-save-email').prop('disabled', true);
                },
                success: function (response) {
                    if (response.result) {
                        modal.hide();
                        ToastAlert.fire({icon: 'success',title: response.message}); 
                    } else {
                        ToastAlert.fire({icon: 'error',title: response.message}); 
                    }
                },
                complete: function () {
                    $('#btn-save-email').prop('disabled', false);
                }
            });  
        }

        function ChangePassword(){
            $.ajax({
                url: "@Url.Action("ChangePassword","Configuration")",
                type: "POST",
                data: { newPassword: $("#newpassword").val(), oldPassword: $("#oldpassword").val(), nroIdUser: "@Model.NroId" },
                beforeSend: function () {
                    $('#btn-save-password').prop('disabled', true);
                },
                success: function (response) {
                    if (response.result) {
                        modal.hide();
                        ToastAlert.fire({icon: 'success',title: response.message}); 
                    } else {
                        ToastAlert.fire({icon: 'error',title: response.message}); 
                    }
                },
                complete: function () {
                    $('#btn-save-password').prop('disabled', false);
                }
            });  
        }

        function ChangeRol(){
            $.ajax({
                url: "@Url.Action("ChangeRolUser","Configuration")",
                type: "POST",
                data: {newRol: $("#newrol").val(),nroIdUser: "@Model.NroId"},
                beforeSend: function () {
                    $('#btn-save-rol').prop('disabled', true);
                },
                success: function (response) {
                    if (response.result) {
                        modal.hide();
                        ToastAlert.fire({icon: 'success',title: response.message}); 
                    } else {
                        ToastAlert.fire({icon: 'error',title: response.message}); 
                    }
                },
                complete: function () {
                    $('#btn-save-rol').prop('disabled', false);
                }
            });  
        }

        function LoadPermisosUsuarios()
        {
            $.ajax({
                url: "/Configuration/GetPermisosUsuario",
                type: 'GET',
                dataType: 'json',
                data: {idUsuario: "@Model.Id"},
                success: function (data) {

                    tablePermisos = $('#table-permisos').DataTable({
                        dom: "t<'d-none align-items-center'<'me-auto pb-2 mx-2'i><'mb-0 pb-2 mx-2'p>>",
                        data: data.data,
                        responsive: true,
                        scrollCollapse: true,
                        destroy: true,
                        paging: true,
