@{
    ViewData["Title"] = "Permisos de Usuario";
}

<div class="row">
    <div class="col-md-12">
        <div class="card border-0">
            <div class="col-md-12 px-2 pt-2">
                <ul class="breadcrumb">
                    <li class="breadcrumb-item"><a href="#">Configuraciones</a></li>
                    <li class="breadcrumb-item active">Permisos</li>
                </ul>
            </div>

            <div class="card-body">
                <div class="row">
                    <div class="col-md-12">
                        <div class="row">
                            <div class="col-6 col-md-4">
                                <div class="form-group">
                                    <div class="input-group">
                                        <span class="input-group-text">
                                            <i class="fas fa-search"></i>
                                        </span>
                                        <input type="text" name="search" id="search" class="form-control form-control-sm" placeholder="Buscar...">
                                    </div>
                                </div>
                            </div>
                            @foreach (var item in ViewBag.Permisos)
                            {
                                if (item.Codigo == "000003" && item.Activo)
                                {
                                    <div class="col-6 col-md-8 d-flex justify-content-end">
                                        <button id="btn-open-modal-permiso" type="button" class="btn btn-primary btn-sm"><i class="fa fa-plus-circle fa-fw me-1"></i> Nuevo Permiso</button>
                                    </div>
                                    break;
                                }
                            }
                           
                        </div>
                    </div>

                    <div class="col-md-12">
                        <table id="table-permisos" class="table table-borderless">
                            <thead>
                                <tr>
                                    <th>Permiso</th>
                                    <th>Tipo</th>
                                    <th>Descripción</th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!--***************************************MODAL  PERMISO*************************************************************************-->
<div class="modal fade" data-bs-backdrop="static" data-bs-keyboard="false" id="modal-permisos">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Permiso de Usuario</h5>
            </div>

            <div class="modal-body">
                <div class="row">
                    <div class="col-md-8">
                        <div class="form-group">
                            <label for="" class="form-label">Permiso</label>
                            <div class="input-group">
                                <input type="text" id="permiso" name="permiso" class="form-control form-control-sm" value="" />
                                <input type="hidden" id="idpermiso" name="idpermiso" class="form-control form-control-sm" value="0" />
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="" class="form-label">Tipo</label>
                            <select id="tipo" name="tipo" class="form-select form-select-sm">
                                <option value="GENERAL">GENERAL</option>
                                <option value="PQRSF">PQRSF</option>
                                <option value="CONFIGURACION">CONFIGURACION</option>
                                <option value="CARTERA">CARTERA</option>
                                <option value="PEDIDO">PEDIDO</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="form-group">
                            <div class="form-group">
                                <label for="" class="form-label">Descripción</label>
                                <textarea id="descripcion" name="descripcion" class="form-control" cols="30" rows="3" placeholder="Escriba aqui una descripción..." style="resize: none;"></textarea>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-success" onclick="SavePermiso()">Aceptar</button>
                <button type="button" class="btn btn-default" data-bs-dismiss="modal">Cancelar</button>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    <script src="~/scripts/Configuracion/index.js" type="text/javascript"></script>
}