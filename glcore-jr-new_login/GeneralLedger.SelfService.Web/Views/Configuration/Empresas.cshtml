@{
    ViewData["Title"] = "Empresas";
}

<div class="row">
    <div class="col-md-12">
        <div class="card border-0">
            <div class="col-md-12 px-2 pt-2">
                <ul class="breadcrumb">
                    <li class="breadcrumb-item"><a href="#">Configuraciones</a></li>
                    <li class="breadcrumb-item active">Empresas</li>
                </ul>
            </div>

            <div class="card-body">
                <div class="row">
                    <div class="col-md-12">
                        <div class="row">
                            <div class="col-6 col-md-4">
                                <div class="form-group">
                                    <div class="input-group">
                                        <span class="input-group-text">
                                            <i class="fas fa-search"></i>
                                        </span>
                                        <input type="text" name="search" id="search" class="form-control form-control-sm" placeholder="Buscar...">
                                    </div>
                                </div>
                            </div>                          
                        </div>
                    </div>

                    <div class="col-md-12">
                        <table id="table-permisos" class="table table-borderless">
                            <thead>
                                <tr>
                                    <th>NIT</th>
                                    <th>Nombre</th>
                                    <th>Email Principal</th>
                                    <th>Servidor IP</th>
                                    <th>Base de Datos</th>
                                    <th>Web</th>
                                    <th>Logo</th>
                                    <th>Fecha Registro</th>
                                </tr>
                            </thead>
                            <tbody>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>