<!-- BEGIN #sidebar -->
<div id="sidebar" class="app-sidebar">
    <!-- BEGIN scrollbar -->
    <div class="app-sidebar-content" data-scrollbar="true" data-height="100%">
        <!-- BEGIN menu -->
        <div class="menu">

            <div class="menu-header">
               MENÚ
            </div>
            
            @{
                if(User.Identity.IsAuthenticated)
                {
                    var userInSession = await UserManager.GetUserAsync(User);
                    string KeyConnection = userInSession.KeyConnection;
                    var rol = UserManager.GetRolesAsync(userInSession).Result.FirstOrDefault();
                    var roluser = RoleManager.Roles.Where(r => r.Name == rol).Select(r => new { r.Id, r.Name }).FirstOrDefault();
                    var menus = profilerService.GetInstancia().ProConfiguracion.GetMenusByUser(userInSession.NroId, roluser.Id, userInSession.KeyConnection).Result.OrderBy(m => m.NvlMnu).ThenBy(m => m.Orden).Select(m => new { m.CodMnu, m.DepMnu, m.NomMnu, m.TpoMnu, m.NvlMnu, m.Controller, m.Action, m.IcoMnu }).Distinct();

                    foreach(var menu in menus)
                    {

                        if (menu.DepMnu == "NO" && menu.TpoMnu == "MenuAction")
                        {
                            <div class="menu-item">
                                <a class="menu-link" asp-controller="@menu.Controller" asp-action="@menu.Action">
                                    <span class="menu-icon"><i class="@menu.IcoMnu"></i></span>
                                    <span class="menu-text">@menu.NomMnu</span>
                                </a>
                            </div>
                        }
                        if (menu.DepMnu == "NO" && menu.TpoMnu != "MenuAction")
                        {
                            <div class="menu-item has-sub expand">
                                <a class="menu-link">
                                    <span class="menu-icon"><i class="@menu.IcoMnu"></i></span>
                                    <span class="menu-text">@menu.NomMnu</span>
                                    <span class="menu-caret"><b class="caret"></b></span>
                                </a>
                        
                               <div class="menu-submenu">
                                    @foreach(var submenu in menus){
                                        if (submenu.DepMnu == menu.CodMnu)
                                        {
                                            <div class="menu-item">
                                                <a class="menu-link" asp-controller="@submenu.Controller" asp-action="@submenu.Action">
                                                    <span class="menu-icon">  
                                                        <i class="@submenu.IcoMnu"></i>
                                                    </span>
                                                    <span class="menu-text">@submenu.NomMnu</span>
                                                </a> 
                                            </div>
                                        }
                                    }
                                </div>
                            </div>
                        }
                    }
                }
             }
        </div>
        <!-- END menu -->
    </div>
    <!-- END scrollbar -->
    <!-- BEGIN mobile-sidebar-backdrop -->
    <button class="app-sidebar-mobile-backdrop" data-dismiss="sidebar-mobile"></button>
    <!-- END mobile-sidebar-backdrop -->
</div>
