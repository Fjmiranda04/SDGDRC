@{
    Layout = "_Layout";
    var returnUrl = ViewData["ReturnUrl"] as string;
    var error = ViewData["LoginError"] as string;
    ViewData["Title"] = "Inicio de Sesión";
}

<div class="container">
    <div class="row d-flex justify-content-center">
        <div class="col-md-5">
            <div class="card border-0 shadow p-5">
                <div class="body">
                    <div class="row">
                        <form action="/Login?ReturnUrl=@System.Net.WebUtility.UrlEncode(returnUrl)" method="POST" id="login-form">
                            <div class="col-md-12 mb-2">
                                <img src="~/img/LogoGLpb.png" class="img-fluid" alt="Logo PowerBy GeneralLedger">
                            </div>
                            <h1 class="text-center">Inicio de Sesión</h1>
                            <div class="text-muted text-center mb-2">
                                Por tu protección, por favor verifica tu identidad.
                            </div>

                             @if (!string.IsNullOrEmpty(error))
                            {
                                <div class="col-md-12 text-center mb-2">
                                    <span class="bg-danger bg-opacity-10 text-danger d-inline-block rounded-sm px-2">
                                        <i class="fa fa-exclamation-circle text-danger fs-12px"></i>
                                        <span class="text-danger">@error</span>
                                    </span>
                                </div>
                            }

                            <div class="col-md-12 mb-3">
                                <div class="form-group">
                                    <label for="" class="form-label">Correo electronico</label>
                                    <input type="email" name="email" id="email" class="form-control" placeholder="Escriba aquí su dirección de correo">
                                </div>
                            </div>

                            <div class="col-md-12 mb-3">
                                <div class="form-group">
                                    <label for="" class="form-label">Contraseña</label>
                                    <input type="password" name="password" id="password" class="form-control" placeholder="Escriba aquí su contraseña">
                                </div>
                            </div>

                            <div class="col-md-12 mb-3">
                                <div class="form-group">
                                   <button type="submit" class="btn btn-primary w-100" id="btn-iniciar">Iniciar Sesión</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

