<div class="row">
    <div class="col-md-12">
        <div class="row">
            <div class="col-md-10">
                <div class="form-group">
                    <label for="" class="form-label">Buscar</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="fas fa-search"></i> </span>
                        <input type="text" name="search-area" id="search-area" class="form-control form-control-sm">
                    </div>
                </div>
            </div>
            <div class="col-md-2 ms-auto d-flex justify-content-end align-items-center mt-4">
                <a id="btn-n-area" class="btn btn-primary btn-sm"><i class="fa fa-plus-circle fa-fw me-1"></i> Nueva Área </a>
            </div>
        </div>
    </div>
    <div class="col-md-12">
        <div class="card border-0">
            <div class="card-body">
                <table id="table-areas" class="table table-borderless align-middle table-hover table-sm w-100">
                    <thead>
                        <tr>
                            <th nowrap align="center" width="80%">Área</th>
                            <th nowrap width="20%">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" data-bs-backdrop="static" data-bs-keyboard="false" id="modal-areas">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Áreas</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body">
                <div class="container">
                    <form action="" id="form-areas">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label class="form-label">Área</label>
                                    <input type="text" class="form-control" id="area" name="area" value="" />
                                    <input type="hidden" class="form-control" id="codigoarea" name="codigoarea" value="" />
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            <div class="modal-footer">
                <button id="btn-save-area" type="button" class="btn btn-success" onclick="SaveA()">Guardar</button>
                <button type="button" class="btn btn-default" data-bs-dismiss="modal">Cancelar</button>
            </div>
        </div>
    </div>
</div>