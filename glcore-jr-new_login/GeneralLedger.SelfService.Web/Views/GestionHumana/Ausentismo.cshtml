@{
    ViewData["Title"] = "Ausentismos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="mb-4">Ausentismos</h1>

<div class="mb-3">
    <a href="/GestionHumana/FormAusentismo" class="btn btn-primary">Crear Nuevo Ausentismo</a>
</div>

<table class="table table-striped">
    <thead class="thead-dark">
        <tr>
            <th>Id</th>
            <th>Código Empleado</th>
            <th>Nombre Empleado</th>
            <th>Fecha Inicio</th>
            <th>Fecha Fin</th>
            <th>Tipo de Ausentismo</th>
            <th>Detalle</th>
        </tr>
    </thead>
    <tbody id="ausentismosTableBody">
        <!-- Aquí se mostrarán los ausentismos -->
    </tbody>
</table>

@section Scripts {
    <script>
        // Llama al método GET para obtener los ausentismos y los muestra en la tabla
        $(document).ready(function () {
            $.ajax({
                url: "/GestionHumana/GetAusentismos",
                type: "GET",
                success: function (response) {
                    if (response.result) {
                        var ausentismos = response.data;
                        var tableBody = $("#ausentismosTableBody");

                        $.each(ausentismos, function (index, ausentismo) {
                            var row = "<tr>" +
                                "<td>" + ausentismo.id_Unico + "</td>" +
                                "<td>" + ausentismo.codigoEmpleado + "</td>" +
                                "<td>" + ausentismo.nombreEmpleado + "</td>" +
                                "<td>" + ausentismo.fecha1 + "</td>" +
                                "<td>" + ausentismo.fecha2 + "</td>" +
                                "<td>" + ausentismo.tipo_Ausentismo + "</td>" +
                                "<td>" + ausentismo.detalle + "</td>" +
                                "</tr>";

                            tableBody.append(row);
                        });
                    } else {
                        alert("Error: " + response.message);
                    }
                },
                error: function (xhr, status, error) {
                    alert("Error: " + error);
                }
            });
        });
    </script>
}

