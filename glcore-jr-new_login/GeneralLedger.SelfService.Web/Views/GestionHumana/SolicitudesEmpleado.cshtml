<div class="modal fade" data-bs-backdrop="static" data-bs-keyboard="false" id="modal-razon">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="lbl-title">Razones</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body">
                <div class="container">
                    <form action="" id="form-reazon" class="needs-validation" novalidate>
                        <div class="row">     
                            
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label class="form-label" id="lbl-solicitud">Observaciones</label>
                                    <textarea id="razones" name="razones" class="form-control" cols="30" rows="3" placeholder="Escriba aquí las observaciones..." style="resize: none;" required></textarea>
                                    <input type="hidden" id="solicitud" name="solicitud" required />
                                    <input type="hidden" id="valor" name="valor" required />
                                </div>
                            </div>

                            <div class="col-md-12 mt-3">
                                <div class="form-check">
                                    <input id="remunerado" name="remunerado" class="form-check-input" type="checkbox" value="false" >
                                    <label id="lblremunerado" class="form-label" for="remunerado">Permiso Remunerado</label>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            <div class="modal-footer">
                <button id="btn-save-razon" type="button" class="btn btn-success">Guardar</button>
                <button type="button" class="btn btn-default" data-bs-dismiss="modal">Cancelar</button>
            </div>
        </div>
    </div>
</div>


