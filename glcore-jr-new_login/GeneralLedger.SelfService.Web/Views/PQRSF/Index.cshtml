@model IEnumerable<GeneralLedger.SelfServiceCore.Data.DTOs.PQRSFListDTO>
@{
    ViewData["Title"] = "PQRSF";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var message = TempData["Message"] as string;
}

<div class="row">
    <div class="col-md-12">
        <div class="card border-0 px-0 py-0 my-0">
            <div class="col-md-12 px-2 pt-2">
                <ul class="breadcrumb">
                    <li class="breadcrumb-item"><a href="#">PQRSF</a></li>
                    <li class="breadcrumb-item active">Listado de Mis PQRSF</li>
                </ul>
            </div>
            <div class="card-body px-0 py-0 my-0">
                <div class="row">
                    <div class="col-md-12">
                        <div class="row mx-2 my-2">
                            <div class="col-6 col-md-2">
                                <div class="form-group">
                                    <label for="" class="form-label">Tipo</label>
                                    <select name="TipoPqrsf" id="TipoPqrsf" class="form-select form-select-sm" data-index="5">
                                        <option value="all">TODAS</option>
                                        @foreach (var item in ViewBag.Situaciones)
                                        {
                                            <option value="@item.Id">@item.TipoSituacion</option>
                                        }
                                    </select>
                                </div>
                            </div>

                            <div class="col-6 col-md-2">
                                <div class="form-group">
                                    <label for="" class="form-label">Estado</label>
                                    <select name="EstadoPqrsf" id="EstadoPqrsf" class="form-select form-select-sm" data-index="6">
                                        <option value="all">TODOS</option>
                                        @foreach (var item in ViewBag.Estados)
                                        {
                                            <option value="@item.Id">@item.Nombre</option>
                                        }
                                    </select>
                                </div>
                            </div>
                            <div class="col-6 col-md-3">
                                <label for="" class="form-label">Fecha Creación</label>
                                <div class="input-group" id="daterangei">
                                    <input type="date" id="dateini" name="dateini" class="form-control form-control-sm" value="" placeholder="Filtrar por fecha" />
                                    <span class="input-group-text"><i class="fa fa-calendar"></i></span>
                                    <input type="date" id="datefin" name="datefin" class="form-control form-control-sm" value="" placeholder="Filtrar por fecha" />
                                </div>
                            </div>

                            <div class="col-6 col-md-3">
                                <div class="form-group">
                                    <label for="" class="form-label">Buscar</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="fas fa-search"></i> </span>
                                        <input type="text" name="Search" id="Search" class="form-control form-control-sm">
                                    </div>
                                </div>
                            </div>

                            @foreach (var item in ViewBag.Permisos)
                            {
                                if (item.Codigo == "000001" && item.Activo)
                                {
                                    <div class="col-md-2 ms-auto d-flex justify-content-end align-items-center mt-3">
                                        <a id="btn-new-pqrsf" asp-action="Create" class="btn btn-primary btn-sm"><i class="fa fa-plus-circle fa-fw me-1"></i> Nueva PQRSF </a>
                                    </div>
                                    break;
                                }
                            }
                        </div>
                    </div>
                    <div class="col-md-12">
                        <table id="pqrflist" class="table table-borderless align-middle table-hover table-sm w-100">
                            <thead>
                                <tr>
                                    <th nowrap align="center">#</th>
                                    <th nowrap>Fecha</th>
                                    <th nowrap>Asunto</th>
                                    <th nowrap>Tipo de Reseña</th>
                                    <th nowrap>Estado</th>
                                    <th nowrap>Contacto</th>
                                    <th nowrap>Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                               
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<!--***************************************MODAL CIERRE*************************************************************************-->
<div class="modal fade" data-bs-backdrop="static" data-bs-keyboard="false" id="modal-reabrir-pqrsf">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Reabrir PQRSF</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body">
                <div class="container">
                    <form action="" id="form-close-pqrsf">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label class="form-label">Escriba las razones por la que desea reabrir la PQRSF</label>
                                    <textarea id="Nota" name="Nota" class="form-control" placeholder="Escribe aquí..." cols="30" rows="4" style="resize: none;"></textarea>
                                    <input type="hidden" id="Id" name="Id" value=""/>
                                    <input type="hidden" id="IdPQRSF" name="IdPQRSF" value=""/>
                                    <input type="hidden" id="Fecha" name="Fecha" value="@DateTime.Now">
                                    <input type="hidden" id="NroIdeAutor" name="NroIdeAutor" />
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            <div class="modal-footer">     
                <button id="btn-open" type="button" class="btn btn-success" onclick="OpenPQRSF()">Guardar</button>
                <button type="button" class="btn btn-default" data-bs-dismiss="modal">Cancelar</button>
            </div>
        </div>
    </div>
</div>


@section scripts
{
    <script src="~/scripts/PQRSF/index.js" type="text/javascript">
    </script>
    <script type="text/javascript">
        ShowMessage("@TempData["Message"]");
    </script>
}

