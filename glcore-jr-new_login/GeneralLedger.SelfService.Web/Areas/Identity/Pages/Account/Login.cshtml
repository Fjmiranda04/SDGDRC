@page
@model LoginModel
@{
    ViewData["Title"] = "Login";
    var error = ViewData["ErrorMessage"] as string;
    var email = ViewData["Email"] as string;
    var logo = ViewData["Logo"] as string;
    var web = ViewData["Web"] as string;
}
@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        if ("@email" == "" || "@email" == null) {
            window.location.href = "PreLogin"
        }
    </script>
}
<div class="container pt-5">
    <div class="row d-flex justify-content-center align-items-center">
        <div class="col-12 col-md-5">
            <div class="card border-0 shadow p-5">
                <div class="body">
                    <div class="row">
                        <form id="account" method="POST">
                            <div class="col-md-12 mb-2 text-center">
                                <img src="@logo" class="img-fluid" width="300" height="300" alt="Logo PowerBy GeneralLedger">
                            </div>
                            <div class="h4 text-dark text-center my-3">
                                Te damos la bienvenida
                            </div>

                            <div class="col-md-12">
                                <div class="form-group text-center">
                                    <span class="badge badge-secondary text-dark border rounded-pill p-2" style="font-size: 0.9rem"><i class="fas fa-user-circle fa-lg"></i>  @email </span>
                                    <input id="Input_Email" name="Input.Email" type="hidden" value="@email" class="form-control">
                                    <span asp-validation-for="Input.Email" class="text-danger d-inline-block rounded-sm px-2"></span>
                                </div>
                            </div>

                            <div class="col-md-12 mt-3">
                                <div class="form-group">
                                    <label for="" class="form-label">Contraseña</label>
                                    <input asp-for="Input.Password" class="form-control" placeholder="Escriba aquí su contraseña">
                                     <span asp-validation-for="Input.Password" class="text-danger d-inline-block rounded-sm px-2"></span>
                                </div>
                            </div>

                            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                            {
                                <div class="col-md-12 text-center mb-2">
                                    <span class="bg-danger bg-opacity-10 text-danger d-inline-block rounded-sm px-2">
                                        <i class="fa fa-exclamation-circle text-danger fs-12px"></i>
                                        <span class="text-danger">@Model.ErrorMessage</span>
                                    </span>
                                </div>
                            }

                            <div class="col-md-12">
                                <div class="row">
                                    <div class="col-6 d-flex align-items-center">
                                        <a id="forgot-password" asp-page="./ForgotPassword">¿Olvidaste tu contraseña?</a>
                                    </div>
                                    <div class="col-6 text-end">
                                        <button type="submit" class="btn btn-primary my-1" id="btn-iniciar">Iniciar Sesión</button>
                                    </div>
                                   @*<a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="btn btn-success w-100">Regitrarse</a>*@
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

