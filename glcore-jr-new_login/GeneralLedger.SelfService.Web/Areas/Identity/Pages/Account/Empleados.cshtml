@page
@model EmpleadosModel
@{
    ViewData["Title"] = "Login";
    var error = ViewData["ErrorMessage"] as string;
    var email = ViewData["Email"] as string;
    var logo = ViewData["Logo"] as string;
    var web = ViewData["Web"] as string;
    var nit = ViewData["Nit"] as string;
    var salt = ViewData["Salt"] as string;
    var TipoValidacion = ViewData["TipoPreguntaSeguridad"] as string;
    var keyConnect = ViewData["KeyConnect"] as string;
}
@section Scripts 
{
    <partial name="_ValidationScriptsPartial" />
}
<div class="container text-center">
    <div class="row d-flex justify-content-center align-items-center" style="height: 100vh;">
        <div class="col-12 col-md-5">
            <div class="card border-0 shadow p-5">
                <div class="body">
                    <div class="row">
                        <form id="account" method="POST">
                            <div class="col-md-12 mb-2 text-center">
                                <img src="@logo" class="img-fluid" width="300" height="300" alt="Logo PowerBy GeneralLedger">
                            </div>
                            <div class="h4 text-dark text-center my-3">
                                Te damos la bienvenida
                            </div>

                            <div class="col-md-12">
                                <div class="form-group text-start">
                                    <label for="" class="form-label">Número de Documento</label>
                                    <input id="Input_NumeroCedula" name="Input.NumeroCedula" type="text" value="" class="form-control" placeholder="Escriba aquí su número de documento">
                                    <span asp-validation-for="Input.NumeroCedula" class="text-danger d-inline-block rounded-sm px-2"></span>

                                    <input id="Input_KeyConnect" name="Input.KeyConnect" type="hidden" value="@keyConnect" class="form-control">
                                    <input id="Input_Salt" name="Input.Salt" type="hidden" value="@salt" class="form-control">
                                    <span asp-validation-for="Input.KeyConnect" class="text-danger d-inline-block rounded-sm px-2"></span>
                                </div>
                            </div>

                            <div class="col-md-12">
                                <div class="form-group text-start">
                                    <label for="" class="form-label">Fecha de Nacimiento</label>
                                    <input asp-for="Input.FechaNacimento" class="form-control" type="date" placeholder="Escriba aquí su fecha  de  nacimiento">
                                    <span asp-validation-for="Input.FechaNacimento" class="text-danger d-inline-block rounded-sm px-2"></span>
                                </div>
                            </div>

                            <div class="col-md-12">
                                <div class="form-group text-start">
                                    <label for="PreguntaSeguridad" class="form-label">Pregunta de seguridad: @(TipoValidacion.Equals("1") ? "Seleccione su EPS" :
                                                                                                                TipoValidacion.Equals("2") ? "Seleccione su Fondo de Cesantías" :
                                                                                                                TipoValidacion.Equals("3") ? "Seleccione su Fondo de Pensión" : 
                                                                                                                "Seleccione su Caja de Compensación")
                                    </label>
                                    <select asp-for="Input.PreguntaSeguridad" class="form-control">
                                        <option value="">Seleccione una respuesta</option>
                                        @foreach (var option in (SelectList)ViewData["Security"])
                                        {
                                            <option value="@option.Value">@option.Text</option>
                                        }
                                    </select>
                                    <span asp-validation-for="Input.PreguntaSeguridad" class="text-danger d-inline-block rounded-sm px-2"></span>
                                    <input id="Input_TipoPreguntaSeguridad" name="Input.TipoPreguntaSeguridad" type="hidden" value="@TipoValidacion" class="form-control">
                                    <span asp-validation-for="Input.TipoPreguntaSeguridad" class="text-danger d-inline-block rounded-sm px-2"></span>
                                </div>
                            </div>

                            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                            {
                                <div class="col-md-12 text-center mb-2">
                                    <span class="bg-danger bg-opacity-10 text-danger d-inline-block rounded-sm px-2">
                                        <i class="fa fa-exclamation-circle text-danger fs-12px"></i>
                                        <span class="text-danger">@Model.ErrorMessage</span>
                                    </span>
                                </div>
                            }

                            <div class="col-md-12">
                                <div class="row">
                                    <div class="col-12">
                                        <button type="submit" class="btn btn-primary w-100" id="btn-iniciar">Solicitar Acceso</button>
                                    </div>            
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


