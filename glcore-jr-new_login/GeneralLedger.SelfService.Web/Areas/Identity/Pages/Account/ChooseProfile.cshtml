@page
@using GeneralLedger.SelfServiceCore.Data.Models
@using GeneralLedger.SelfServiceCore.Data.ModelsGL;
@model RegisterModel
@{
    ViewData["Title"] = "Elegir Perfil";
}
<div class="container pt-3">
    <div class="row d-flex justify-content-center align-items-center">
        <div class="col-md-12 text-center">
            <img src="~/img/LogoGLpb.png" class="img-fluid" width="300" height="300" alt="PowerBy General Ledger" />
        </div>
        <div class="col-12 text-center my-2">
            <h3 class="h3">Crear usuario</h3>
        </div>
        <div class="col-md-6 d-flex justify-content-center">
            <div class="card border-0" style="width: 23rem;">
                <div class="card-body">
                    <div class="row p-3">
                        <div class="col-md-12 mb-2">
                            <img class="img-fluid" src="/img/customer.png" alt="Imagen de Cliente">
                        </div>

                        <div class="col-md-12">
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="btn btn-primary w-100">Como Cliente</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6 d-flex justify-content-center">
            <div class="card border-0" style="width: 23rem;">
                <div class="card-body">
                    <div class="row p-3">
                        <div class="col-md-12  mb-2">
                            <img class="img-fluid" src="/img/delivery-courier.png" alt="Imagen de Proveedor" />
                        </div>

                        <div class="col-md-12">
                            <a asp-page="./RegisterProveedor" asp-route-returnUrl="@Model.ReturnUrl" class="btn btn-primary w-100">Como Proveedor</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
    </div>
</div>

