@{
    Layout = null; // Indica que esta vista no utilizará ningún _Layout
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Dashboard Administrador</title>
    <!--Poppins Font-->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700;800&display=swap" />

    <!--Material Icons-->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons+Outlined" rel="stylesheet" />

    <!--Custom  CSS-->
    <link rel="stylesheet" href="~/css/StyleDashboard.css" />
</head>
<body>
    <div class="grid-container">
        <!--Header-->
        <header class="header">
            <div class="menu-icon" onclick="openSidebar()">
                <span class="material-icons-outlined">menu</span>
            </div>
            <div class="header-left">
                <span class="material-icons-outlined">search</span>
            </div>
            <div class="header-right">
                <span class="material-icons-outlined">notifications</span>
                <span class="material-icons-outlined">email</span>
                <a href="/Auth/Login"> <span class="material-icons-outlined">account_circle</span></a>
            </div>
        </header>
        <!--End Header-->
        <!--Sidebar-->
        <aside id="sidebar">
            <div class="sidebar-title">
                <div class="sidebar-brand">
                    <span class="material-icons-outlined">dashboard</span>- SDGDRC
                </div>
                <span class="material-icons-outlined" onclick="closeSidebar()">close</span>
            </div>
            <ul class="sidebar-list">
                <li class="sidebar-list-item">
                    <a href="/Usuario/Index" class="sidebar-link">
                        <span class="material-icons-outlined">person</span>Usuario
                    </a>
                </li>
                <li class="sidebar-list-item">
                    <a href="/Ruta/Index" class="sidebar-link">
                        <span class="material-icons-outlined">map</span>Rutas
                    </a>
                </li>
                <li class="sidebar-list-item">
                    <span class="material-icons-outlined">delete</span>Residuos
                </li>
                <li class="sidebar-list-item">
                    <span class="material-icons-outlined">description</span>Informe
                </li>
                <li class="sidebar-list-item">
                    <span class="material-icons-outlined">settings</span>Configuración
                </li>
            </ul>
        </aside>
        <!--End Sidebar-->
        <!--Main-->
        <main class="main-container">
            <div class="main-title">
                <p class="font-weight-bold">DASHBOARD</p>
            </div>
            <div class="main-cards">
                <div class="card">
                    <div class="card-inner">
                        <p class="text-primary">USUARIOS</p>
                        <span class="material-icons-outlined text-blue">person</span>
                    </div>
                    <span class="text-primary font-weight-bold">@ViewBag.UserCount</span>
                </div>

                <div class="card">
                    <div class="card-inner">
                        <p class="text-primary">RESIDUOS</p>
                        <span class="material-icons-outlined text-orange">delete</span>
                    </div>
                    <span class="text-primary font-weight-bold">79</span>
                </div>

                <div class="card">
                    <div class="card-inner">
                        <p class="text-primary">RUTAS</p>
                        <span class="material-icons-outlined text-green">map</span>
                    </div>
                    <span class="text-primary font-weight-bold">@ViewBag.RutaCount</span>
                </div>
            </div>

            <div class="charts">
                <div class="charts-card">
                    <p class="chart-title">Residuos Más Registrados</p>
                    <div id="bar-chart"></div>
                </div>

                <div class="charts-card">
                    <p class="chart-title">Registro de Usuarios</p>
                    <div id="area-chart"></div>
                </div>
            </div>
        </main>
        <!--End Main-->
    </div>

    <!--Scripts-->
    <!--ApexCharts-->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/apexcharts/3.49.0/apexcharts.min.js"></script>
    <!--Custom JS-->
    <script src="../js/DashboardAdmin.js"></script>

</body>
</html>

